<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:ui:component/etc/form.xsd">
    <fieldset name="general">
        <field name="name" formElement="input">
            <settings>
                <label translate="true">Name</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="Document" formElement="DocUploader">
            <settings>
                <label translate="true">Document</label>
                <componentType>DocUploader</componentType>
                <dataScope>Document</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>


